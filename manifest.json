{
  "name": "Bing Searcher",
  "version": "8.2",
  "manifest_version": 2,
  "description": "Perform multiple random searches on Bing.com for Microsoft Rewards",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "https://www.bing.com/*",
    "https://www.msn.com/*/shopping/*",
    "https://www.bing.com/shop*"
  ],"content_scripts": [
    {
      "js": [
        "contentscript.js"
      ],
      "matches": [
        "https://www.msn.com/*/shopping*",
        "https://www.bing.com/shop*"
      ]
    }
  ],
  "web_accessible_resources": [
    "gamefix.js"
],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
